---
import Container from "./container.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Home",
    path: Astro.site+"/",
  },
  {
    title: "About",
    path: Astro.site+"/about",
  },
  {
    title: "Events",
    path: Astro.site+"/events",
  },
  {
    title: "Skill Development",
    path: Astro.site+"/careers",
  },
  {
    title: "Incubation",
    path: Astro.site+"/startups",
  },
  {
    title: "Resources",
    path: Astro.site+"/resources",
  },
  {
    title: "Community",
    path: Astro.site+"/community",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav >
      <div class="flex w-full xl:w-auto items-center justify-between">
        <a href={Astro.site} class="text-lg">
          <img
            src={`${Astro.site}/logo/logo.png`}
            class="h-14 w-14 md:h-18 md:w-18"
          />

        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-12 h-12 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0 lg:justify-center lg:flex-grow">
        <ul class="flex flex-col lg:flex-row lg:gap-3 lg:justify-center lg:items-center w-full">
          {
            menuitems.map((item) => (
              <li>
                <a
                  href={item.path}
                  class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900"
                >
                  <span class="text-lg font-semibold">{item.title}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</Container>